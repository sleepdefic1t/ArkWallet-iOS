md-content(layout='row')
  md-elevation-z0
  md-content.body-content(flex='70')

    md-content.header(layout='column', layout-align='center center', layout-padding)
        img.logo(src=require('../../assets/img/logo.png'))

        

    div(layout='row', layout-align='space-around', ng-show='$ctrl.prelogged')
      md-progress-circular.md-primary(md-mode='indeterminate', md-diameter='50')

    div(ng-show='!$ctrl.prelogged && !$ctrl.logged')
      login(address='$ctrl.address', on-login='$ctrl.login()')

    div(ng-if='$ctrl.logged', ng-class='{ online: $ctrl.$peers.online, offline: !$ctrl.$peers.online }')
      top(account='$ctrl.account')
      send(account='$ctrl.account')
      transactions(account='$ctrl.account')
      
      md-button.md-raised.md-primary.logout(ng-click='$ctrl.logout()', ng-if='$ctrl.logged') Logout
